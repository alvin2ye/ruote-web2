
<div style="float: left;">

  <div class="content_title">/processes/new</div>

  <% form_tag '/processes', :multipart => true do |f| %>
    <%= hidden_field_tag 'definition_id', @definition.id %>
    <table>
      <tr>
        <td>uri</td>
        <td><%= @definition.uri %></td>
      </tr>
      <tr>
        <td>attributes / fields</td>
        <td><%= text_area_tag(
          'attributes',
          { 'key0' => 'value0', 'key1' => 'value1' }.to_json) -%></td>
      </tr>
      <tr>
        <td colspan='2'>
          <%= submit_tag 'launch new process instance' %>
          <%= link_to 'back', :back %>
        </td>
      </tr>
    </table>
  <% end -%>
</div>

<div class="align-right">

  <%= render_fluo :definition => @definition %>

</div>

