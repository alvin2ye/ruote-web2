
<div class="column span-12 first">

  <div class="content_title">/definitions/<%= h @definition.id %></div>

  <table>
    <tr>
      <td>name</td>
      <td><%= h @definition.name %></td>
    </tr>
    <tr>
      <td>uri</td>
      <td><%= link_to h(@definition.uri), @definition.full_uri %></td>
    </tr>
    <tr>
      <td>created_at</td>
      <td><%= h @definition.created_at %></td>
    </tr>
    <tr>
      <td>updated_at</td>
      <td><%= h @definition.updated_at %></td>
    </tr>
    <tr>
      <td class='col_buttons nhover' colspan='2'>
        <%= link_to_if current_user.may_launch?(@definition), 'launch', new_process_path(:definition => @definition.id) %> |
        <%= link_to_if current_user.is_admin?, 'edit', edit_definition_path(@definition) %> |
        <%= link_to 'back', :back %>
      </td>
    </tr>
  </table>
</div>

<div class="column span-12 last align-right">

  <%= render_fluo :definition => @definition %>

</div>

