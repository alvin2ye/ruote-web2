
<div class='content_title'>/groups</div>

<table class='coll'>

  <tr class='nhover'>
    <th>name</th>
    <th>members</th>
  </tr>

<% for group in @groups %>
  <tr class='group'>
    <td class='group_name'><%= h group.name %></td>
    <td class='group_members'><%= comma_list(group.users, :login) %></td>
    <!--td><%= link_to 'Show', group %></td-->
    <td class='coll_button'>
      <%= link_to 'edit', edit_group_path(group) %> |
      <%= link_to 'destroy', group, :confirm => 'Are you sure ?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'new group', new_group_path, :class => 'coll_button group_new' %>

