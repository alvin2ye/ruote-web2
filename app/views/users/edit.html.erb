
<div class="content_title">/users/<%= @user.login %></div>

<div class='left_pane'>

  <% form_for(@user) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :login %><br />
      <%= f.text_field :login %>
    </p>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>

  <%= link_to 'show', @user %> |
  <%= link_to 'back', users_path %>
</div>

<div class='right_pane'>
  <%= render :partial => 'shared/user_groups', :locals => @ug_locals %>
</div>

<div class='clear'></div>

